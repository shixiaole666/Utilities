<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
<!--        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowActionBar">false</item>-->
        <!--全屏-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        &lt;!&ndash; Transparent Status Bar &ndash;&gt;-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        &lt;!&ndash; Transparent Navigation Bar &ndash;&gt;-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>
    <style name="SpecialButton">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="Widget.TurnTable.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.TurnTable.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@drawable/widget_child_bg</item>
        <item name="android:textColor">#f8f4ed</item>
    </style>

    <style name="CustomEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColorHint">#f8f4ed</item>
        <item name="colorControlNormal">@color/汉白玉</item>
        <item name="colorControlActivated">@color/京绿</item>
    </style>

</resources>
