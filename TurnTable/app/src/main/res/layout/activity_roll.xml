<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/yukee0">
    <com.android.turntable.RollingNumberView
        android:id="@+id/rolling_number_view"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="150dp"
        android:background="#A0F9D3E3"/>

    <EditText
        android:id="@+id/rollEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/luckyWheelView"
        android:layout_marginTop="16dp"
        android:singleLine="true"
        android:hint="Please input choices separated by commas." />

    <Button
        android:id="@+id/rollBtn"
        style="@style/SpecialButton"
        android:text="Select"
        android:onClick="onClick"/>


</LinearLayout>